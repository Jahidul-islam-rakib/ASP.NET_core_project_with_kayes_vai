@model IEnumerable<CrudKayes.Models.Person>

	@{
	ViewData["Title"] = "Person";
	}

<div class="card">
	<div class="card-body">
		 <table class="table">
			 <thead>
				 <tr>
					 <th>Id</th>
					<th>Name</th>
					<th>Gender</th>
					<th>Height</th>
					<th>Weight</th>
					<th>DOB</th>
					<th>Hair Color</th>
					<th>Present Address</th>
					<th>Parmanent Address</th>
					<th>Full Address</th>
					<th>Action</th>

				 </tr>
			 </thead>

			 <tbody>
				 @foreach(var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>@item.Gender</td>
						<td>@item.Height</td>
						<td>@item.Weight</td>
						<td>@item.DOB</td>
						<td>@item.HairColor</td>
						<td>@item.PresentAddress</td>
						<td>@item.PermanentAddress</td>
						<td>@item.FullAddress</td>
						
						<td>
							<a class="btn btn-primary" asp-action="AddOrEdit" asp-route-id="@item.Id">Edit </a> |
							<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
						</td>

					</tr>
				}
			</tbody>
		 </table>
	</div>

	<div class="card-footer">
		<a class="btn btn-primary" asp-action="AddOrEdit">Create New</a>
	</div>
</div>